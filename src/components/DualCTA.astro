---
interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<section class={`py-16 md:py-24 lg:py-32 ${className}`}>
  <div class="container mx-auto px-4">
    <div class="flex max-w-4xl mx-auto">
      <a
        href="#all-items"
        class="flex-1 bg-navy text-paper py-6 md:py-8 lg:py-10 px-4 text-center font-display text-lg md:text-xl lg:text-2xl font-medium hover:bg-opacity-90 transition-all duration-300 border-r border-paper/20"
      >
        ALL ITEMS
      </a>
      <a
        href="#staff-styling"
        class="flex-1 bg-terra text-paper py-6 md:py-8 lg:py-10 px-4 text-center font-display text-lg md:text-xl lg:text-2xl font-medium hover:bg-opacity-90 transition-all duration-300"
      >
        STAFF STYLING
      </a>
    </div>
  </div>
</section>

<style>
  a {
    position: relative;
    overflow: hidden;
  }
  
  a::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 0;
    height: 100%;
    background: rgba(255, 255, 255, 0.1);
    transition: width 0.3s ease;
  }
  
  a:hover::before {
    width: 100%;
  }
</style>
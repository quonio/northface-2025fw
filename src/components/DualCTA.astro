---
import { cn } from '@/utils/cn'
import upArrowIcon from '@/assets/images/decorations/icon-up-arrow.svg'

interface Props {
  class?: string
}

const { class: className = '' } = Astro.props
---

<section class={cn('p-0', className)}>
  <div class="flex w-full flex-col md:flex-row">
    <a
      href="#all-items"
      class="cta-button w-full md:w-1/2 text-paper py-6 md:py-8 lg:py-10 px-4 text-center font-display text-[7.73vw] md:text-xl lg:text-[3.194vw] font-extralight transition-all duration-300 border-b md:border-r border-paper/20 flex items-center justify-center gap-3"
    >
      <span>ALL ITEMS</span>
      <img
        src={upArrowIcon.src}
        alt=""
        class="w-[6.13vw] h-[6.13vw] md:w-6 md:h-6 lg:w-[2.639vw] lg:h-[2.639vw]"
      />
    </a>
    <a
      href="#staff-styling"
      class="cta-button w-full md:w-1/2 text-paper py-6 md:py-8 lg:py-10 px-4 text-center font-display text-[7.73vw] md:text-xl lg:text-[3.194vw] font-extralight transition-all duration-300 flex items-center justify-center gap-3"
    >
      <span>STAFF STYLING</span>
      <img
        src={upArrowIcon.src}
        alt=""
        class="w-[6.13vw] h-[6.13vw] md:w-6 md:h-6 lg:w-[2.639vw] lg:h-[2.639vw]"
      />
    </a>
  </div>
</section>

<style>
  .cta-button {
    position: relative;
    overflow: hidden;
    background-color: var(--color-terra-dark);
  }

  .cta-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 0;
    height: 100%;
    background: rgba(0, 0, 0, 0.15);
    transition: width 0.3s ease;
    z-index: 1;
  }

  .cta-button > * {
    position: relative;
    z-index: 2;
  }

  .cta-button:hover::before {
    width: 100%;
  }
</style>

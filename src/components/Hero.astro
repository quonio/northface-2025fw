---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';
import HeroNav from './HeroNav.astro';
import type { HeroNavItem } from '@/types/hero';

export interface Props {
  image: ImageMetadata;
  imageAlt: string;
  navigation?: HeroNavItem[];
}

const { image, imageAlt, navigation = [] } = Astro.props;
---

<section class="relative h-screen w-full lg:p-5" aria-label="Hero section">
  <div class="relative flex h-full w-full items-center justify-center overflow-hidden">
    <Image
      src={image}
      alt={imageAlt}
      widths={[390, 768, 1280, 1440, 1920]}
      sizes="100vw"
      loading="eager"
      fetchpriority="high"
      class="absolute inset-0 h-full w-full object-cover object-center"
      data-animation-target="hero-image"
      format="webp"
      quality={85}
    />
    {
      navigation.length > 0 && (
        <HeroNav items={navigation} class="absolute top-4 right-4 z-10 md:top-6 md:right-6" />
      )
    }
  </div>
</section>

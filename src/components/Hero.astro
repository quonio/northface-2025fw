---
import { Picture } from 'astro:assets'
import Logo from './Logo.astro'
import kvMainPc from '../assets/images/kv__main-pc.jpg'
import kvMainTab from '../assets/images/kv__main-tab.jpg'
import kvMainSp from '../assets/images/kv__main-sp.jpg'

export interface Props {
  imageAlt: string
}

const { imageAlt } = Astro.props
---

<section class="relative h-screen w-full lg:p-5" aria-label="Hero section">
  <div
    class="relative flex h-full w-full items-center justify-center overflow-hidden"
  >
    <Picture
      src={kvMainPc}
      alt={imageAlt}
      widths={[390, 768, 1280, 1440, 1920, 2752]}
      sizes="100vw"
      loading="eager"
      fetchpriority="high"
      class="absolute inset-0 h-full w-full object-cover object-center"
      data-animation-target="hero-image"
      formats={['webp']}
      quality={100}
      pictureAttributes={{
        class: 'absolute inset-0 h-full w-full',
      }}
    >
      <source media="(max-width: 767px)" srcset={kvMainSp.src} />
      <source media="(max-width: 1023px)" srcset={kvMainTab.src} />
    </Picture>
    <Logo
      class="text-cream absolute top-8 left-1/2 z-20 w-32 -translate-x-1/2 md:top-12 md:w-40 lg:w-48"
    />

    <!-- Left side text -->
    <div
      class="text-cream absolute top-8 left-4 z-10 md:top-12 md:left-8 lg:left-12"
    >
      <h1
        class="font-display text-[1.82vw] leading-tight font-semibold md:text-[1.82vw] lg:text-[1.56vw] xl:text-[1.25vw]"
      >
        THE NORTH FACE MATERNITY+
      </h1>
      <p class="mt-1 text-[1.3vw] md:text-[0.98vw]">
        for the Pregnant, Moms and Dads.
      </p>
    </div>

    <!-- Right side text -->
    <div
      class="text-cream absolute top-8 right-4 z-10 text-right md:top-12 md:right-8 lg:right-12"
    >
      <p
        class="font-display text-lg font-medium md:text-[1.82vw] lg:text-[1.56vw]"
      >
        2025 FALL&WINTER
      </p>
    </div>
  </div>
</section>

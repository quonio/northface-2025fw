---
import Logo from './Logo.astro'
import { cn } from '../utils/cn'

interface Props {
  class?: string
}

const { class: className = '' } = Astro.props
---

<footer
  class={cn(
    'bg-light-navy-2 text-gold pt-[22.4vw] pb-[6.4vw] md:py-16 lg:py-20 font-light',
    className
  )}
>
  <div class="container mx-auto px-[6.4vw] md:px-4 max-w-6xl">
    <div class="flex flex-col md:flex-row gap-8 md:gap-20 mb-12">
      <!-- Logo - Hidden on mobile, shown on desktop -->
      <div class="flex-shrink-0 hidden md:block">
        <Logo class="w-32 md:w-32 text-gold" />
      </div>

      <!-- Staff Credit & Photo -->
      <div class="space-y-8">
        <!-- Staff Credit -->
        <div>
          <h3 class="font-display text-sm md:text-base font-medium mb-2">
            STAFF CREDIT
          </h3>
          <div class="space-y-2 text-sm md:text-base">
            <p>Produce & Web Direction & Writing: Ayumi Yagi (Pivolo)</p>
            <p>Art Direction & Design: Shinpei Nakaya (HARO inc,)</p>
            <p>Development: Ryuichi Hayashi</p>
          </div>
        </div>

        <!-- Photo -->
        <div>
          <h3 class="font-display text-sm md:text-base font-medium mb-2">
            PHOTO
          </h3>
          <div class="space-y-2 text-sm md:text-base">
            <p>Photography: Kentaro Otsuka</p>
            <p>Hair: Akemi Ezashi (mod's hair)</p>
            <p>Casting: Ai Ushijima</p>
          </div>
        </div>
      </div>

      <!-- Company Info -->
      <div class="pl-0 md:pl-16">
        <p class="font-display text-sm md:text-base font-medium mb-2">
          Goldwin Inc.
        </p>
        <div class="space-y-1 text-sm md:text-base">
          <p>
            TEL: <a
              href="tel:0120-307-560"
              class="hover:text-gold/70 transition-colors">0120-307-560</a
            >
          </p>
          <p>
            WEB: <a
              href="https://www.thenorthface.jp/"
              target="_blank"
              rel="noopener noreferrer"
              class="hover:text-gold/70 transition-colors"
              >https://www.thenorthface.jp/</a
            >
          </p>
        </div>
      </div>
    </div>

    <!-- Logo - Centered on mobile only -->
    <div class="flex justify-center mb-8 mt-24 md:hidden">
      <Logo class="w-32 text-gold" />
    </div>

    <div class="pt-8 md:pt-12 text-center">
      <!-- Disclaimer & Copyright -->
      <div class="space-y-4 text-xs md:text-sm">
        <p class="leading-loose">
          ※内容および詳細・商品価格は、予告なく変更されることもありますので予めご了承ください。
        </p>
        <p>Our sale is limited to Japan only. © GOLDWIN INC.</p>
      </div>
    </div>
  </div>
</footer>

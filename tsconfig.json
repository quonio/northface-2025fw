{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@styles/*": ["src/styles/*"]
    },
    "types": ["astro/client"],
    "allowImportingTsExtensions": true
  },
  "include": ["src/**/*", ".astro/types.d.ts"]
}
